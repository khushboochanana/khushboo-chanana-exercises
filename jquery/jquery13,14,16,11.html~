<html>
<head>
<script src="jquery-1.9.0.js"></script>
<script>
$(document).ready(function(){
	$("#b1").click(function(){
	
	var target=$('#b1');
	target.animate({
 		width:target.width() * 2,
 		height:target.height() * 2}, 1000);
	});
	$("#b2").click(function(){
	


        alert($('#target').find('.child').size());
	});

	$("#b3").click(function(){
	
		var target = $('#change');
		target.html(target.html().replace('h1','h2'));
         });

$("#b7").click(function(){
	
	$('h1').replaceWith(function()
	{
	return $("</h2>").append($(this).contents());

	});
	});

$("#b11").click(function(){
	$("#target").empty();
	});

});
</script>
</head>
